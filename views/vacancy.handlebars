<div class="grid-container">

  <div class="vacancy__page">
    <div class="vacancy__page__field-data">
      <p class="vacancy__page__field-data__info-1">Empresa</p>
      <p class="vacancy__page__field-data__info-2">{{vacancy.company}}</p>
    </div>
    <div class="vacancy__page__field-data">
      <p class="vacancy__page__field-data__info-1">Ubicacion</p>
      <p class="vacancy__page__field-data__info-2">{{vacancy.location}}</p>
    </div>
    <div class="vacancy__page__field-data">
      <p class="vacancy__page__field-data__info-1">Contrato</p>
      <p class="vacancy__page__field-data__info-2">{{vacancy.contract}}</p>
    </div>
    <div class="vacancy__page__field-data">
      <p class="vacancy__page__field-data__info-1">Salario</p>
      <p class="vacancy__page__field-data__info-2">${{vacancy.salary}} dls</p>
    </div>
  
  </div>

  <div class="vacancy__page-2">
    <aside class="vacancy__page-2__skill-list">
      <h2 class="vacancy__page-2__skill-list__title">Conocimientos Deseados</h2>
      <ul class="vacancy__page-2__skill-list__ul">
        {{#each vacancy.skills}}
          <li class="vacancy__page-2__skill-list__li">{{this}}</li>
        {{/each}}
      </ul>
      
      
    </aside>
    <main class="vacancy__page-2__data">
      <h2 class="vacancy__page-2__data__title">Descripcion del puesto</h2>
      <div class="vacancy__page-2__data__info">
        {{{vacancy.description}}}
      </div>

    </main>

  </div>

  <div class="vacancy__button">
    <a href="/vacancies/edit/{{vacancy.url}}" class="vacancy__edit-button">
          Editar Vacante
    </a>
  </div>

  <div class="container-form-flex">
    <div class="grid-container-gap">
      <h2 class="text-gray">Contactar Reclutador</h2>
      <p class="text-white">Llena el siguiente formulario, sube tu curriculum y pronto te contactaremos</p>

      <form 
        action="/vacancies/{{vacancy.url}}" 
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="field-flex mb-10">
          <label class="text-gray mr-10">Nombre</label>
          <input type="text" name="name" placeholder="Tu Nombre" class="input-gray">
        </div>

        <div class="field-flex mb-10">
          <label class="text-gray mr-10">E-mail</label>
          <input type="email" name="email" placeholder="Tu Email" class="input-gray">
        </div>

        <div class="field-flex mb-10">
          <label class="text-gray mr-10">CV</label>
          <input type="file" name="cv" class="input-gray">
        </div>

        <div class="field-flex">
          <input type="submit" placeholder="Enviar" class="create-account__form__field__submit" value="Enviar">
        </div>

      </form>
    </div>

    <div class="container-form">
        <h2 class="text-gray">Informacion Reclutador</h2>

      {{#if vacancy.author.name}}
        <p class="text-white">{{vacancy.author.name}}</p>
      {{/if}}
      
      {{#if vacancy.author.imageProfile}}
        <img src="/uploads/{{vacancy.author.imageProfile}}" alt="" class="image-profile">
      {{/if}}

    </div>
  </div>

</div>

