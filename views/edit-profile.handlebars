<main class="container-form">
  <form 
    action="/edit-profile" 
    method="POST"
    class="form-grid"
  >

  <div class="field-flex">
    <label class="text-gray">Nombre</label>
    <input 
      type="text"
      name="name"
      placeholder="Tu Nombre"
      class="input-gray"
      value="{{user.name}}"
        
    >
  </div>

  <div class="field-flex">
    <label class="text-gray">Email</label>
    <input 
      type="email"
      name="email"
      placeholder="Tu Email"
      class="input-gray"
      value="{{user.email}}"
        
    >
  </div>

  <div class="field-flex">
    <label class="text-gray">Password</label>
    <input 
      type="password"
      name="password"
      placeholder="Tu Password"
      class="input-gray"
    >
  </div>

  <div>
    <input
      class="input-button"
      type="submit"
      class=""
      value="Guardar Cambios"
    >
  </div>

  </form>

  <form 
    action="/edit-profile-img"
    method="POST"
    enctype="multipart/form-data"
    class="form-grid"
  >
    <div class="field-flex">
      <label class="text-gray mr-10">Imagen</label>
      <input 
        type="file" 
        name="image" 
        placeholder="Tu imagen de perfil"
      >
      <img src="uploads/{{user.imageProfile}}" alt="" class="image-profile" >
    </div>

    <input 
      type="submit"
      value="Subir Imagen"
      class="input-button"
    >
  </form>
  
</main>