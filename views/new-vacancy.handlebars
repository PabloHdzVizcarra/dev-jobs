<main class="vacancy">
  <form action="/vacancy/new" method="POST" class="vacancy__form">
    <h3 class='vacancy__info'>Informacion general</h3>

    <div class="vacancy__form-title">
      <label class='vacancy__form-title__text'>Titulo</label>
      <input 
        type="text" 
        name="title" 
        placeholder="Ej: React Developer" 
        required 
        class='vacancy__form-title__input'
      >
    </div>
    <div class="vacancy__form-title">
      <label class='vacancy__form-title__text'>Empresa</label>
      <input 
        type="text" 
        name="company" 
        placeholder="Ej: Facebook" 
        required
        class='vacancy__form-title__input'
      >
    </div>
    <div class="vacancy__form-title">
      <label class='vacancy__form-title__text'>Ubicacion</label>
      <input 
        type="text" 
        name="location" 
        placeholder="Ej: Mexico"
        required
        class='vacancy__form-title__input'
      >
    </div>
    <div class="vacancy__form-title">
      <label class='vacancy__form-title__text'>Salario</label>
      <input 
        type="text" 
        name="salary" 
        placeholder="Ej: 500 USD" 
        required
        class='vacancy__form-title__input'
      >
    </div>

    <div class='vacancy__form__selected-options'>
      <label class="vacancy__form__selected-options__title">Contrato</label>
      <select name="contract" class="vacancy__form__selected-options__options">
        <option value="" disabled selected>-- Selecciona --</option>
        <option value="freelance">Freelance</option>
        <option value="full time">Tiempo Completo</option>
        <option value="half time">Medio Tiempo</option>
        <option value="for project">Por Proyecto</option>
      </select>
    </div>

    <h3 class='vacancy__info'>Descripcion del puesto</h3>

    <div class="vacancy__description">
      <label> Descripcion</label>
      <input type="hidden" id="x" name="description">
      <trix-editor input="x"></trix-editor>
    </div>

    <div class="vacancy__knowledge">
      <h3 class="vacancy__knowledge__title">Conocimientos</h3>
      <ul class="vacancy__knowledge__skills-list js-skill-list">
        {{#selectSkills a}}
        {{/selectSkills}}
      </ul>
    </div>

    <div>
      <input type="hidden" name="skills" id="js-skills">
      <input type="submit" value="Publicar" class="vacancy__form__submit">
    </div>

  </form>
</main>